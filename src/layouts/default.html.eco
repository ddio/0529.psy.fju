<html>
<head>
	<title> <%= @site.title %> </title>
	<%- @getBlock("meta").toHTML() %>
    <%- @getBlock("styles").add(['styles/semantic.css', 'styles/main.css']).toHTML() %>
</head>
<body>
	<div class="ui fixed inverted menu">
		<div class="ui container">
			<div class="header item"> <%= @site.title %> </div>
			<a class="active item" href="index.html"> 所有爭點 </a>
			<a class="item" href="about.html"> 關於我 </a>
		</div>
	</div>
	<div class="ui main container">

		<div class="ui basic segment">
		<div class="ui statistics">
			<div class="<%= @statusC['已釐清'] %> statistic">
				<div class="value"><%= @getCollection('resolved').length %></div>
				<div class="label">已釐清</div>
			</div>
			<div class="<%= @statusC['初步進展，待後續釐清'] %> statistic">
				<div class="value"><%= @getCollection('doing').length %></div>
				<div class="label">初步進展，待後續釐清</div>
			</div>
			<div class="<%= @statusC['尚未核對'] %> statistic">
				<div class="value"><%= @getCollection('todo').length %></div>
				<div class="label">尚未核對</div>
			</div>
		</div>
		</div>

		<div id="conflict">
	    <% for page in @getCollection("conflict").toJSON(): %>
			<div class="ui raised issue segment">
				<h4><a title="<%= page.title %>" href="<%= page.basename %>">
					<span class="ui <%= @statusC[page.status] %> ribbon label"> <%= page.status %> </span>
					<span> <%= page.title %> </span>
					<i class="linkify icon"></i>
				</a></h4>
				<span class="result"> 結果：<%= page.result %> </span>
			</div>
		<% end %>
		</div>

		<div id="resolved">
	    <% for page in @getCollection("resolved").toJSON(): %>
			<div class="ui raised issue segment">
				<h4><a title="<%= page.title %>" href="<%= page.basename %>.html">
					<span class="ui <%= @statusC[page.status] %> ribbon label"> <%= page.status %> </span>
					<span> <%= page.title %> </span>
					<i class="linkify icon"></i>
				</a></h4>
				<span class="result"> 結果：<%= page.result %> </span>
			</div>
		<% end %>
		</div>

		<div id="doing">
	    <% for page in @getCollection("doing").toJSON(): %>
			<div class="ui raised issue segment">
				<h4><a title="<%= page.title %>" href="<%= page.basename %>.html">
					<span class="ui <%= @statusC[page.status] %> ribbon label"> <%= page.status %> </span>
					<span> <%= page.title %> </span>
					<i class="linkify icon"></i>
				</a></h4>
			</div>
		<% end %>
		</div>

		<div id="todo">
		<% for page in @getCollection("todo").toJSON(): %>
			<div class="ui raised issue segment">
				<h4><a title="<%= page.title %>" href="<%= page.basename %>.html">
					<span class="ui <%= @statusC[page.status] %> ribbon label"> <%= page.status %> </span>
					<span> <%= page.title %> </span>
					<i class="linkify icon"></i>
				</a></h4>
			</div>
		<% end %>
		</div>

		<div class="ui basic segment">
			<div class="fb-comments" data-href="http://ddio.github.io/0529.psy.fju/index.html" data-width="100%"></div>
		</div>
	</div>
	<div id="fb-root"></div>

	<script>(function(d, s, id) {
		var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) return;
			js = d.createElement(s); js.id = id;
			js.src = "//connect.facebook.net/zh_TW/sdk.js#xfbml=1&version=v2.6&appId=238718126925";
			fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));
	</script>
	<script>
	(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	 (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	 m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	 })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
	ga('create', 'UA-79305302-1', 'auto');
	ga('send', 'pageview');
	</script>
</body>
</html>

